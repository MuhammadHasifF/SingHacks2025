# Required: Groq API Key
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Required: Stripe Configuration (for payment features)
# Get your secret key from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
# Get your webhook secret from: https://dashboard.stripe.com/webhooks (optional but recommended)
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
AWS_REGION=ap-southeast-1
DYNAMODB_PAYMENTS_TABLE=lea-payments-local
# DynamoDB endpoint - configure based on your Docker setup (check the Payments repo)
DDB_ENDPOINT=http://localhost:8000

# Optional: App Configuration
APP_ENV=local
LOG_LEVEL=INFO
CHROMA_PERSIST_DIR=./data/chroma_db

# Optional: Tavily API (for web search, if needed)
TAVILY_API_KEY=your_tavily_key_here
